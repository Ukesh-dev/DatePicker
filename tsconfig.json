{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ES6", "DOM"],
    "strict": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "stripInternal": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
